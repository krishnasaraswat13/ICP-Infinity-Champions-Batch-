class Solution {
    public int characterReplacement(String arr, int k) {
        int l=0;
        int r=0;
        int zeros=0;
        Map<Character, Integer> map = new HashMap<>();
        int maxf=0;
        int maxlen=0;
        while(r<arr.length()){
            map.put(arr.charAt(r), map.getOrDefault(arr.charAt(r), 0)+1);
            maxf=Math.max(maxf,map.get(arr.charAt(r)));
            if(((r-l+1)-maxf)<=k){
                maxlen=Math.max(maxlen,r-l+1);
            }
            else{
                while(((r-l+1)-maxf)>k){
                    map.put(arr.charAt(l), map.get(arr.charAt(l))-1);
                    maxf=Math.max(maxf,map.get(arr.charAt(l)));
                    l++;
                }
                maxlen=Math.max(maxlen,r-l+1);
            }
            r++;
        }
        return maxlen;
    }
}